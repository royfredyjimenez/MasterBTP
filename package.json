
{
  "name": "cap-products",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@graphql-tools/schema": "^9.0.14",
    "@sap/cds": "^6",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.18",
    "express": "^4",
    "hdb": "^0.19.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.96.0",
    "@sapui5/ts-types": "^1.92.2",
    "cds-swagger-ui-express": "^0.3.0",
    "eslint": "^7.32.0",
    "sqlite3": "^5.0.4"
  },
  "scripts": {
    "start": "cds run"
  },
  "engines": {
    "node": "^16.15"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "i18n": {
      "default_language": "es",
      "folders": [
        "_i18n",
        "i18n",
        "assets/i18n"
      ]
    },
    "features": {
      "graphql": true
    },
    "requires": {
      "db": {
        "kind": "hana-cloud"
      },
      "sapbackend": {
        "kind": "odata-v2",
        "model": "srv/external/sapbackend",
        "credentials": {
          "requestTimeout": 30000,
          "url": "http://erp13.sap4practice.com:9037/sap/opu/odata/sap/YSAPUI5_SRV_01/",
          "authentication": "NoAuthentication"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "sapux": [
    "app/product",
    "app/product"
  ]
}
